# ----------------------------------------------------
# 1. AJUSTES BASE Y MANEJO DE ERRORES
# ----------------------------------------------------

# Asegura la codificación de caracteres UTF-8
<IfModule mod_mime.c>
    AddDefaultCharset UTF-8
</IfModule>

# Define la página de error 404 personalizada que creaste
ErrorDocument 404 /404.html


# ----------------------------------------------------
# 2. CANONICALIZACIÓN Y SEGURIDAD (HTTPS y WWW)
# ----------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. FORZAR HTTPS
    # Redirige todo el tráfico de HTTP a HTTPS. Es vital para SEO y seguridad.
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. FORZAR NON-WWW (Recomendado para una URL más limpia)
    # Redirige www.tudominio.com a tudominio.com
    # Si deseas forzar WWW, comenta estas dos líneas y usa la siguiente opción.
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [L,R=301]

    # OPCIONAL: Si deseas forzar WWW, usa este bloque en su lugar:
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteCond %{HTTPS}s on(s)|
    # RewriteRule ^(.*)$ http%1://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>


# ----------------------------------------------------
# 3. RENDIMIENTO: CACHÉ DEL NAVEGADOR (HEADERS)
# ----------------------------------------------------
# Le dice al navegador del usuario cuánto tiempo debe almacenar archivos estáticos.
# Reduce la carga del servidor y mejora la velocidad de carga para visitantes recurrentes.

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 hour"

    # Recursos estáticos (CSS, JS, Fonts) - Caché de un año
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-ttf "access plus 1 year"

    # Imágenes - Caché de 1 mes
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"

    # Archivos HTML (Solo un día, por si se necesita actualizar el contenido rápidamente)
    ExpiresByType text/html "access plus 1 day"
</IfModule>


# ----------------------------------------------------
# 4. RENDIMIENTO: COMPRESIÓN GZIP (DEFLATE)
# ----------------------------------------------------
# Comprime archivos antes de enviarlos, reduciendo el tamaño de la transferencia.

<IfModule mod_deflate.c>
    # Niveles de compresión (1-9, donde 9 es el más alto)
    DeflateCompressionLevel 6
    
    # Añadir tipos MIME a comprimir
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    # Los archivos multimedia (imágenes, videos) no deben comprimirse aquí
</IfModule>

# ----------------------------------------------------
# 5. SEGURIDAD ADICIONAL (HEADERS)
# ----------------------------------------------------

# Evita que el sitio se incruste en un iframe de otro dominio (protección contra clickjacking)
Header set X-Frame-Options "SAMEORIGIN"
# Habilita los filtros de XSS en navegadores compatibles
Header set X-XSS-Protection "1; mode=block"
# Evita que el navegador intente "adivinar" el tipo MIME del archivo.
Header set X-Content-Type-Options "nosniff"